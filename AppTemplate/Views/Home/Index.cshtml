@inject Threax.ProgressiveWebApp.DisplayConfig config;
@{
    ViewData["Title"] = "Welcome";
    Layout = "_MainLayout";
}

<nav class="navbar navbar-expand-lg navbar-dark bg-brand-app">
    <div class="container">
        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Startup" target="contentFrame">@config.SiteName</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="Startup" target="contentFrame">Home</a></li>
                @* if (User.IsInRole(Roles.EditValues))
                    {*@
                <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="Values" target="contentFrame">Values</a></li>
                @*}*@
                @if (User.IsInRole(Threax.AspNetCore.UserBuilder.Entities.AuthorizationAdminRoles.EditRoles))
                {
                    <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Admin" asp-action="Users" target="contentFrame">Edit Users</a></li>
                }
            </ul>
            @if (User.Identity.IsAuthenticated)
            {
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false" id="userMenu">@User.Identity.Name <span class="caret"></span></a>
                        <div class="dropdown-menu" aria-labelledby="userMenu">
                            <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Logout">Logout</a>
                        </div>
                    </li>
                </ul>
            }
        </div>
    </div>
</nav>

<iframe data-hr-controller="contentFrame" src="https://@Context.Request.Host.Value@Url.Content("~/Startup")" data-hr-handle="frame" id="contentFrame" name="contentFrame" frameborder="0" data-hr-on-load="load" title="Main Content"></iframe>